{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/auth/login",
      "dest": "app.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb_connection_string",
    "JWT_SECRET": "@jwt_secret",
    "CLIENT_URL": "https://wwpmanage.vercel.app"
  }
}